<%= simple_form_for(@company) do |f| %>
  <div class="panel-body ">
    <%= render 'shared/form_errors', :f => f %>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Company name</label>
      <div class="col-sm-4">
        <%= f.input :company_name ,as: :field_for_text,:input_html => {:placeholder=>"Company name"},label: false%>
      </div>
    </div>
  </div>

  <div class="form-actions panel-footer" >
    <span class="pull-right"> <%= html_submit %>
      <% unless f.object.new_record? %>
        <%= show_link 'Show company', company_path(@company) %>
        <%= delete_link 'Delete company', company_path(@company) ,"#{@company == current_employee.company ? 'disabled' : ''}"%>
        <%= new_link 'New company', new_company_path(@company) %>
      <% end %>
      <%= back_link('Back to companies', companies_path(@company)) %> </span>
    <div class="clearfix"></div>
  </div>
<% end %>
