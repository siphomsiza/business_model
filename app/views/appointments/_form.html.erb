<%= simple_form_for([@company,@appointment]) do |f| %>
  <div class="panel-body ">
    <%= render 'shared/form_errors', :f => f %>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Description</label>
      <div class="col-sm-4">
        <%= f.input :description ,as: :field_for_text,:input_html => {:placeholder=>"Description"},label: false%>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="form-group">
      <br/>
      <label for="inputEmail3" class="col-sm-2 control-label">Start time</label>
      <div class="col-sm-4">
        <%= f.input :start_time,:as => :date_time_picker,:input_html => {compulsory_fields: true,value: f.object.start_time.present? ? f.object.start_time : Date.today},label: false%>
      </div>
    </div>

    <div class="clearfix"></div>
    <div class="form-group">
      <br/>
      <label for="inputEmail1" class="col-sm-2 control-label">End Time</label>
      <div class="col-sm-4">
        <%= f.input :end_time,:as => :date_time_picker,:input_html => {compulsory_fields: true,value: f.object.end_time.present? ? f.object.end_time : Date.today},label: false%>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="form-group">
      <br/>
      <label for="inputEmail1" class="col-sm-2 control-label">Info</label>
      <div class="col-sm-6">
        <%= f.input :info , as: :text, :input_html => { class: 'form-control', :cols => 100, :rows => 5 },label: false%>
      </div>
    </div>
  </div>

  <div class="form-actions panel-footer" >
    <span class="pull-right"> <%= html_submit %>
      <% unless f.object.new_record? %>
        <%= show_link 'Show appointment', company_appointment_path(@company,@appointment) %>
        <%= delete_link 'Delete appointment', company_appointment_path(@company,@appointment) %>
        <%= new_link 'New appointment', new_company_appointment_path(@company,@appointment) %>
      <% end %>
      <%= back_link('Back to appointments', company_appointments_path(@company)) %> </span>
    <div class="clearfix"></div>
  </div>
<% end %>
